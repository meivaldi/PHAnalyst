<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen3">

    <ImageView
        android:id="@+id/pakcoyImage"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/img_label"
        android:layout_height="@dimen/img_label"
        android:src="@drawable/pakcoy"/>

    <TextView
        android:id="@+id/pakcoyLabel"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/pakcoyImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pakcoy"
        android:textColor="@color/textColor"
        android:textSize="@dimen/textSize"
        android:textStyle="bold"/>

</RelativeLayout>